{
    "name": "My Motivator",
    "version": "1.0.0",
    "description": "Random Motivational quotes on selected websites",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.leetcode.com/*"],
    "content_scripts": [
      {
        "matches": ["https://*.leetcode.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_title": "My Motivator",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}