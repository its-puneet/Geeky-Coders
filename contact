    $lastName = $_POST['lname'];
    $gender = $_POST['gender'];
    $email= $_POST['email'];
    $password= $_POST['cpass'];
    $number = $_POST['age'];



// database insert SQL code
$sql = "INSERT INTO `tbl_test`(firstName,lastName,gender,email,password,number)values(?,?,?,?,?,?)")
         $stmt->bind_param("sssssi",$firstName,$lastName,$gender,$email,,$password,$number,);
         $stmt->execute();
         echo "registration successfully...";
         $stmt->close();
         $conn->close();
     }
{

// insert in database 
